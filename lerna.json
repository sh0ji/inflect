{
	"packages": ["packages/*"],
	"version": "0.0.0",
	"npmClient": "yarn",
	"useWorkspaces": true,
	"command": {
		"version": {
			"conventionalCommits": true,
			"createRelease": "github",
			"signGitCommit": true,
			"signGitTag": true,
			"changelogPreset": {
				"name": "conventionalcommits",
				"types": [
					{
						"type": "feat",
						"section": "✨ Features"
					},
					{
						"type": "fix",
						"section": "🐛 Bug Fixes"
					},
					{
						"type": "visual",
						"hidden": false,
						"section": "💄 Visual"
					},
					{
						"type": "perf",
						"hidden": false,
						"section": "⚡️ Performance"
					},
					{
						"type": "docs",
						"hidden": false,
						"section": "📝 Documentation"
					},
					{
						"type": "chore",
						"hidden": false,
						"section": "🛠 Maintenance"
					},
					{
						"type": "style",
						"hidden": true
					},
					{
						"type": "refactor",
						"hidden": false,
						"section": "♻️ Refactor"
					},
					{
						"type": "test",
						"hidden": true
					}
				]
			}
		}
	}
}
